<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <!-- no directory prefix appears to be better than the same directory twice.... grr!
    <baseDirectory>knitml-${version}</baseDirectory>-->
  <fileSets>
    <fileSet>
      <excludes>
        <exclude>src/**</exclude>
      </excludes>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
        <include>bin/**</include>
        <include>conf/**</include>
        <include>docs/**</include>
        <include>samples/**</include>
      </includes>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>com.knitml:knitml-core</include>
        <include>com.knitml:knitml-knitting-engine</include>
        <include>com.knitml:knitml-validation</include>
        <include>com.knitml:knitml-gauge-transformer</include>
        <include>com.knitml:knitml-pattern-renderer</include>
        <include>com.knitml:knitml-el</include>
        <include>com.knitml:knitml-command-line</include>
      </includes>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <includeDependencies>true</includeDependencies>
        <unpack>false</unpack>
	<dependencySets>
          <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>lib</outputDirectory>
          </dependencySet>
        </dependencySets>
        </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
